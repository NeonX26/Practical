#include<stdio.h>
#include<conio.h>
int main()
  {
    char *str,cntvow=0, cntcon=0,i;
    clrscr();
    printf("Enter a string: ");
    gets(str);
    for(i=0;*(str+i)!='\0';i++)
      {
	if(*(str+i)=='a' || *(str+i)=='A'  ||
	   *(str+i)=='e' || *(str+i)=='E'  ||
	   *(str+i)=='i' || *(str+i)=='I'  ||
	   *(str+i)=='o' || *(str+i)=='O'  ||
	   *(str+i)=='u' || *(str+i)=='U')
	  {
	    cntvow++;
	  }
	else if((*(str+i)>=65 && *(str+i)<=90)  ||
		(*(str+i)>=97 && *(str+i)<=122) )
	  {
	    cntcon++;
	  }
      }
    printf("Vowels in the string are %d\n",cntvow);
    printf("Consonents in the string are %d",cntcon);
    getch();
    return 0;
  }