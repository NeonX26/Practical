#include<stdio.h>
#include<conio.h>
int seriessum(int num)
  {
     int sum=0,i;
     for(i=1;i<=num;i++)
       {
	 sum += term(i);
       }
     return sum;
  }
int term(int num)
  {
    int term=1,i;
    for(i=1;i<num;i++)
      {
	term=term*i;
      }
    return term;
  }
