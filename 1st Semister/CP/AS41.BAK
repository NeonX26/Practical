struct Employee
  {
    int eno;
    char ename[50];
    int salary;
  }emp[20];
void empinput(int no)
  {
     printf("Emplyee number : %d",no+1);
     printf("\nEnter Employee Name : ");
     fflush(stdin);
     gets(emp[no].ename);
     emp[no].eno=no+101;
     printf("Enter Employee Salary : ");
     fflush(stdin);
     scanf("%d",&emp[no].salary);
  }
void printemp(int n)
  {
    printf("\n=============\n");
    printf("Employee Name   : %s\n",emp[n].ename);
    printf("Emplyee Number  : %d\n",emp[n].eno);
    printf("Employee Salary : %d\n",emp[n].salary);
  }
int maxSal(int n)
  {
    int max=emp[0].salary,i;
    for(i=1;i<n;i++)
      {
	if(max<emp[i].salary)
	  {
	    max=emp[i].salary;
	  }
      }
    return max;
  }
